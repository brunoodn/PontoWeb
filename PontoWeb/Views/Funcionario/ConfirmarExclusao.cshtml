@model FuncionarioModel

@{
    ViewData["Title"] = "Confirmação de exclusão";
}

<p>Deseja mesmo excluir o usuario ( @Model.Nome ) ?</p>

<a asp-controller="Funcionario" asp-action="Index" class="btn btn-primary">Voltar</a>
<a asp-controller="Funcionario" asp-action="Excluir" asp-route-matricula="@Model.Matricula" class="btn btn-danger">Excluir</a>