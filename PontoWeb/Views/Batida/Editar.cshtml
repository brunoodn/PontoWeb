@model BatidaModel
@{
    ViewData["Title"] = "Editando batida";
}

<h2>Editando batida</h2>
<br />


@if(TempData["MensagemSucesso"] != null){
    <div class="alert alert-success alert-dismissible fade show" role="alert">
  <strong>@TempData["MensagemSucesso"]</strong>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

@if(TempData["MensagemErro"] != null){
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>@TempData["MensagemErro"]</strong>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
<hr />
<form method="post" asp-controller="Batida" asp-action="Atualizar">
  <input type="hidden" asp-for="Id" />
  <div class="mb-3">
    <label for="matricula" class="form-label">Matricula</label>
    <input asp-for="MatriculaEmpregado" type="text" class="form-control" id="matricula" >
    @Html.ValidationMessageFor(b => b.MatriculaEmpregado)
  </div>

  <div class="mb-3">
    <label for="registro" class="form-label">Registro Batida</label>
    <input asp-for="Registro" type="text" class="form-control" id="registro">
    @Html.ValidationMessageFor(b => b.Registro)
  </div>
  <div class="mb-3">
    <label for="observacao" class="form-label">Observação</label>
    <input asp-for="Observacao" type="text" class="form-control" id="observacao">
    @Html.ValidationMessageFor(b => b.Observacao)
  </div>

  <button type="submit" class="btn btn-primary">Atualizar</button>
  <a asp-controller="Batida" asp-action="Index" class="btn btn-warning">Voltar</a>
</form>

